<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <TextView
        android:id="@+id/about_textView_about_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/about_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/about_textView_about_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/about_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/about_textView_about_heading"
        app:layout_constraintTop_toBottomOf="@+id/about_textView_about_heading" />

    <TextView
        android:id="@+id/about_textView_source_code_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/source_code_heading"
        app:layout_constraintStart_toStartOf="@+id/about_textView_about_heading"
        app:layout_constraintTop_toBottomOf="@+id/about_textView_about_text" />

    <TextView
        android:id="@+id/about_textView_source_code_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/source_code_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/about_textView_about_text"
        app:layout_constraintTop_toBottomOf="@+id/about_textView_source_code_heading" />

    <TextView
        android:id="@+id/about_textView_source_imp_note_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/imp_note_heading"
        app:layout_constraintStart_toStartOf="@+id/about_textView_about_heading"
        app:layout_constraintTop_toBottomOf="@+id/about_textView_source_code_text" />

    <TextView
        android:id="@+id/about_textView_source_imp_note_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/imp_note_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/about_textView_about_text"
        app:layout_constraintTop_toBottomOf="@+id/about_textView_source_imp_note_heading" />

</androidx.constraintlayout.widget.ConstraintLayout>
